@model Exam.Web.Models.ExamTakeViewModel
@{
    ViewData["Title"] = "Review";
}
<h1 class="mb-4">Review Answers</h1>
<div class="d-grid gap-3">
    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        var q = Model.Questions[i];
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fw-semibold">Question @(i+1)</div>
                        <div>@q.Header</div>
                    </div>
                    <span class="badge text-bg-secondary">@q.Mark mark(s)</span>
                </div>
                <div class="mt-2">
                    <span class="badge text-bg-success">Correct answer highlighted</span>
                </div>
                <ul class="list-group list-group-flush mt-3">
                    @for (int a = 0; a < q.Answers.Count; a++)
                    {
                        var answer = q.Answers[a];
                        var css = answer.IsCorrect ? "list-group-item d-flex justify-content-between align-items-center list-group-item-success" : "list-group-item";
                        <li class="@css">
                            <span>@answer.Text</span>
                            @if (answer.IsCorrect)
                            {
                                <span class="badge text-bg-success">Correct</span>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
<div class="mt-4">
    <a class="btn btn-primary" href="@Url.Action("Index","Home")">Back to Home</a>
</div>