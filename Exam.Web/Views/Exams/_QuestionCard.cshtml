@model Exam.Web.Models.QuestionViewModel
<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">Question</h5>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label" asp-for="Header"></label>
                <input class="form-control" asp-for="Header" />
            </div>
            <div class="col-md-6">
                <label class="form-label" asp-for="Body"></label>
                <input class="form-control" asp-for="Body" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Mark"></label>
                <input class="form-control" asp-for="Mark" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Type"></label>
                <select class="form-select" asp-for="Type">
                    <option value="1">Multiple Choice</option>
                    <option value="2">True / False</option>
                </select>
            </div>
        </div>
        <div class="mt-3">
            <label class="form-label">Answers</label>
            <div class="d-grid gap-2">
                @for (int i = 0; i < Model.Answers.Count; i++)
                {
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <input class="form-control" asp-for="Answers[i].Text" placeholder="Answer text" />
                        </div>
                        <div class="col-auto form-check">
                            <input class="form-check-input" asp-for="Answers[i].IsCorrect" />
                            <label class="form-check-label">Correct</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>